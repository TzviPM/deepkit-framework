{
  "name": "@deepkit/sqlite",
  "version": "1.0.12",
  "description": "deepkit/orm SQLite adapter",
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "echo '{\"type\": \"module\"}' > ./dist/esm/package.json"
  },
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "peerDependencies": {
    "@deepkit/core": "workspace:*",
    "@deepkit/orm": "workspace:*",
    "@deepkit/sql": "workspace:*",
    "@deepkit/stopwatch": "workspace:*",
    "@deepkit/type": "workspace:*"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "better-sqlite3": "^11.8.1",
    "sqlstring-sqlite": "^0.1.1"
  },
  "devDependencies": {
    "@deepkit/core": "workspace:*",
    "@deepkit/orm": "workspace:*",
    "@deepkit/orm-integration": "workspace:*",
    "@deepkit/sql": "workspace:*",
    "@deepkit/stopwatch": "workspace:*",
    "@deepkit/type": "workspace:*"
  },
  "jest": {
    "runner": "../../jest-serial-runner.js",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.spec.json"
        }
      ]
    },
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "testTimeout": 50000,
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ]
  },
  "gitHead": "56081823b559bb68b77a8781957af5d9c2e019a7"
}
